<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstFloorActivity"
    android:orientation="vertical"
    android:padding="15dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dilantai pertama ini terdapat lelaki yang mempunyai criteria memiliki pekerjaan serta taat pada Tuhan."
        android:gravity="center"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <TextView
        android:layout_marginTop="90dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/puas_atau_belumpuas"
        android:gravity="center"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/btnFinishFirst"
        android:layout_alignParentBottom="true"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Finish"/>

    <Button
        android:id="@+id/btnNextFirst"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="220dp"
        android:layout_alignParentBottom="true"
        android:text="Next"/>

</RelativeLayout>