<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="vertical">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="15dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PEMBUKAAN"
        android:gravity="center"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginBottom="15dp"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/pembukaan"
        android:gravity="center"
        android:textSize="15dp"
        android:layout_marginBottom="15dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="The Rules"
        android:textSize="25dp"
        android:gravity="center"
        android:layout_marginBottom="15dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1. Pikirkan matang sebelum memilih tombol"
        android:textSize="15dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2. Jika telah dipikirkan pilih salah satu tombol yang telah disedikan yaitu, tombol next dan tombol finish"
        android:textSize="15dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="3. Setelah dipilih nanti akan ada arahan lebih lanjut"
        android:textSize="15dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="4. Jika anda belum puas maka klik tombol next dan dan jika sudah puas klik finish"
        android:textSize="15dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="5. Jika anda telah menentukan pilihan, maka kalian akan dibawa ke suatu ruangan dan mendapatkan apa yang kalian mau"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="6. Jika anda sudah siap, silahkan klik tombol yang ada dibawah"
        android:textSize="15dp"/>

    <Button
        android:id="@+id/btnStart"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="200dp"
        android:text="Start"
        android:onClick="btnStart"/>

</LinearLayout>
</ScrollView>